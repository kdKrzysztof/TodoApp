{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "outDir": "dist",
      "rootDir": "./",
      "strict": true,  
      "sourceMap": true,
      "allowJs": true,
      "esModuleInterop": true, 
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "types": [
        "mocha",
        "node",
      ],
    },
    "include": ["src", "tests", "/**/*.ts"],
    "exclude": ["node_modules"]
}